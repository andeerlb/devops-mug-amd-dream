pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Choose environment')
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                    docker build \
                      -t app:${params.ENV} \
                      -f app/Dockerfile .
                    """
                }
            }
        }

        stage('Test Container') {
            steps {
                sh """
                docker run --rm app:${params.ENV}
                """
            }
        }
    }

    post {
        always {
            echo "Cleaning up Docker images..."
            sh "docker rmi -f app:${params.ENV} || true"
        }
    }
}