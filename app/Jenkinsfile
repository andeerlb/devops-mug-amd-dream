pipeline {
    agent any

    tools {
        go 'go-1.24.5'
        git 'git'
        docker 'docker'
    }

    parameters {
        choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Choose environment')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Go App') {
            steps {
                sh '''
                mkdir -p bin
                cd app
                go mod tidy
                GOOS=linux GOARCH=amd64 go build -o ../bin/app main.go
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build \
                  -t app:${params.ENV} \
                  -f app/Dockerfile .
                '''
            }
        }
    }

    post {
        always {
            echo "Cleaning up Docker images..."
            sh "docker rmi -f app:${params.ENV} || true"
        }
    }
}
