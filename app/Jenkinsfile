pipeline {
    agent any

    tools {
        go 'go-1.24.5'
        git 'git'
    }

    parameters {
        choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Choose environment')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Go App') {
            steps {
                sh """
                mkdir -p bin
                go mod tidy
                GOOS=linux GOARCH=amd64 go build -o bin/app app/main.go
                """
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build \
                  -t app:${params.ENV} \
                  -f app/Dockerfile .
                """
            }
        }

        stage('Test Container') {
            steps {
                sh "docker run --rm app:${params.ENV}"
            }
        }
    }

    post {
        always {
            echo "Cleaning up Docker images..."
            sh "docker rmi -f app:${params.ENV} || true"
        }
    }
}